/dts-v1/;

#include <freq.h>

#include <rpi_pico/rp2040.dtsi>
#include "healthypi5_rp2040-pinctrl.dtsi"
#include <zephyr/dt-bindings/pwm/pwm.h>

#include <zephyr/dt-bindings/i2c/i2c.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,flash-controller = &ssi;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0; //&cdc_acm_uart0;
		zephyr,code-partition = &code_partition;
		zephyr,bt-uart = &uart1;
	};

	leds {
		compatible = "gpio-leds";

		blue_led: led_0 {
			gpios = <&gpio0 22 GPIO_ACTIVE_LOW>;
			label = "Blue - LED0";

		};

		green_led: led_1 {
			gpios = <&gpio0 21 GPIO_ACTIVE_LOW>;
			label = "Green - LED1";
		};

	};

	gpio_keys {
		compatible = "gpio-keys";
		label = "buttons";
		button_up: sw1 {
			label = "Button UP / SW1";
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_UP>;
		};
		button_ok: sw2 {
			label = "Button OK / SW2";
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_ENTER>;
		};
		button_down: sw3 {
			label = "Button DOWN / SW3";
			gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_DOWN>;
		};
	};

	xtal_clk: xtal-clk {
		compatible = "fixed-clock";
		clock-frequency = <12000000>;
		#clock-cells = <0>;
	};

	pwm_leds {
		compatible = "pwm-leds";
		status = "okay";

		pwm_led0: pwm_led_0 {
			pwms = <&pwm 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM_LED";
		};

		bl_led_pwm: pwm_ledbl {
			pwms = <&pwm 0 PWM_USEC(10) PWM_POLARITY_NORMAL>;
			label = "PWM_LED";
		};
	};

	aliases {
		ledblue = &blue_led;
		ledgreen = &green_led;
		bl-led-pwm = &bl_led_pwm;

		keyup = &button_up;
		keydown = &button_down;
		keyok = &button_ok;

		watchdog0 = &wdt0;
		pwm-led0 = &pwm_led0;

		max30001 = &max30001;
		afe4400 = &afe4400;
	};
};

&flash0 {
	reg = <0x10000000 DT_SIZE_M(8)>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Reserved memory for the second stage bootloader */
		second_stage_bootloader: partition@0 {
			label = "second_stage_bootloader";
			reg = <0x00000000 0x100>;
			read-only;
		};

		/*
		 * Usable flash. Starts at 0x100, after the bootloader. The partition
		 * size is 2MB minus the 0x100 bytes taken by the bootloader.
		 */

		code_partition: partition@100 {
			label = "code-partition";
			reg = <0x100 0x00100000>;
			//reg = <0x100 (DT_SIZE_M(2) - 0x100)>;
			read-only;
		};

		storage_partition: partition@219000 {
			label = "storage";
			reg = <0x219000 0x5E6000>;    // 5.898 MB - rounded off to nearest multiple of 4096 (1510) and 537
		};
	};
};

&uart0 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&uart1 {
	current-speed = <921600>;
	status = "okay";
	pinctrl-0 = <&uart1_default>;
	pinctrl-names = "default";
	hw-flow-control;
};

&gpio0 {
	status = "okay";
};

&i2c0 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "disabled";
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";

	max17048: max17048@36 {
		compatible = "maxim,max17048";
		status = "ok";
		reg = <0x36>;
	};

	max30205: max30205@49 {
		compatible = "maxim,max30205";
		status = "ok";
		reg = <0x49>;
	};

	atecc608a: atecc608a@6a {
		compatible = "atmel,atecc608";
		reg = <0x6a>;
	};
};

&timer {
	status = "okay";
};

&clocks {
	pinctrl-0 = <&clocks_default>;
	pinctrl-names = "default";
};

&spi0 {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
	pinctrl-0 = <&spi0_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpio0 5 GPIO_ACTIVE_LOW>, <&gpio0 19 GPIO_ACTIVE_LOW>;

	max30001: max30001@0 {
		compatible = "maxim,max30001";
		status = "okay";
		reg = <0x0>;
		spi-max-frequency = <DT_FREQ_M(4)>;
		//intb-gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
		rtor-enabled;
		ecg-enabled;
		bioz-enabled;

		bioz_cgmag = <4>;
		ecg-gain = <2>;
		bioz-gain = <2>;
		//ecg-invert;

		//ecg-dcloff-enable;
		//ecg-dcloff-current = <1>; // 5 nA

	};

	afe4400: afe4400@1 {
		compatible = "ti,afe4400";
		pwdn-gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;
		reg = <0x1>;
		spi-max-frequency = <DT_FREQ_M(8)>;
		status = "okay";
	};
};

&spi1 {
	clock-frequency = <DT_FREQ_M(48)>;
	status = "okay";
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";

	status = "okay";
	cs-gpios = <&gpio0 29 GPIO_ACTIVE_LOW>, <&gpio0 13 GPIO_ACTIVE_LOW>;    //CS Reg 0 - Display, CS Reg 1 - SD Slot

	sdhc0: sdhc@1 {
		compatible = "zephyr,sdhc-spi-slot";
		reg = <1>;
		status = "okay";
		power-delay-ms = <5>;
		spi-max-frequency = <DT_FREQ_M(4)>;
		mmc {
			compatible = "zephyr,sdmmc-disk";
			status = "okay";
		};
	};
};

&wdt0 {
	status = "okay";
};

&adc {
	status = "disabled";

};

zephyr_udc0: &usbd {
	status = "okay";
};

&zephyr_udc0 {
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};
};

/*&pwm {
	pinctrl-0 = <&pwm_ch1b_default>;
	pinctrl-names = "default";
	divider-int-0 = <255>;
};*/

&vreg {
	regulator-always-on;
	regulator-allowed-modes = <REGULATOR_RPI_PICO_MODE_NORMAL>;
};
